<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
  <servlet>
  	<servlet-name>loginit</servlet-name>
  	<display-name>LoginController</display-name>
  	<servlet-class>com.kapture.web.LoginController</servlet-class>
  </servlet>
  
  
  <servlet>
  	<servlet-name>signupit</servlet-name>
  	<display-name>SignupController</display-name>
  	<servlet-class>com.kapture.web.SignupController</servlet-class>
  </servlet>
  
   <servlet>
  	<servlet-name>logoutit</servlet-name>
  	<display-name>LogoutController</display-name>
  	<servlet-class>com.kapture.web.LogoutController</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>loginit</servlet-name>
  	<url-pattern>/userlogin</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>signupit</servlet-name>
  	<url-pattern>/signup</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>logoutit</servlet-name>
  	<url-pattern>/logout</url-pattern>
  </servlet-mapping>
  
  
  <welcome-file-list>
      <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>